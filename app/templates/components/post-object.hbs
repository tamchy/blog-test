<div class="card">
	<div class="card-block">
    	<h4 class="card-title">{{post.title}}</h4>
  	  	<h6 class="card-subtitle mb-2 text-muted"></h6>
  	  	<p class="card-text"></p>
  	  	{{#link-to "post" post.id class="card-link"}}Читать дальше{{/link-to}}
  	  	{{# if userCanEdit}}
  	  		{{#link-to "post.edit" post class="card-link"}}Редактировать{{/link-to}}
  	  		{{#link-to "post.delete" post class="card-link"}}Удалить{{/link-to}}
  	  	{{/if}}
  	</div>
</div>